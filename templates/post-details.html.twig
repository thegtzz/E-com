                        <!-- SIMILAR PROPERTIES -->

                        <div class="similar-properties">
                            <h2>{% trans %}Similar properties{% endtrans %}</h2>
                            <div class="type-box item-per-row-3">
                                <div class="row">
                                    {% for post in postsSimilar %}
                                        <div class="col-md-4 col-sm-6 col-xs-12">
                                            <div class="property-container">
                                                <div class="property-image" style="width: 263px; height: 175px">
                                                    <img width="640" height="425" src="/images/{{ post.imageAvatar.filename }}" class="property-box-thumbnail wp-post-image" alt="" />
                                                    <a href="{{ path('get_post_details', {id: post.id}) }}" class="property-box-image-inner "></a>
                                                </div>
                                                <div class="property-content">
                                                    <h3>
                                                        <a href="{{ path('get_post_details', {id: post.id}) }}">
                                                            {% if app.request.locale == 'ru'%}
                                                                {{ post.titleRu }}
                                                            {% elseif app.request.locale == 'pl' %}
                                                                {{ post.titlePl }}
                                                            {% elseif app.request.locale == 'fr' %}
                                                                {{ post.titleFr }}
                                                            {% else %}
                                                                {{ post.titleEn }}
                                                            {% endif %}
                                                        </a>
                                                        <small><i class="fa fa-map-marker"></i> {{ post.location }}</small>
                                                    </h3>
                                                    <p class="text-cut">
                                                        {% if app.request.locale == 'ru'%}
                                                            {{ post.propertyDescriptionRu }}
                                                        {% elseif app.request.locale == 'pl' %}
                                                            {{ post.propertyDescriptionPl }}
                                                        {% elseif app.request.locale == 'fr' %}
                                                            {{ post.propertyDescriptionFr }}
                                                        {% else %}
                                                            {{ post.propertyDescriptionEn }}
                                                        {% endif %}
                                                    </p>
                                                </div>
                                                <div class="property-attributes">
                                                    <div class="col-xs-4" style="width: 200px; padding-left: 25px; float: left">
                                                        <h4>
                                                            {% if post.price is not empty %}
                                                                <p title="Price"><i class="fa fa-cc-visa"></i> {{ post.price }} $</p>
                                                            {% endif %}
                                                        </h4>
                                                    </div>
                                                </div>
                                                <div class="property-buttons">
                                                    <a href="{{ path('get_post_details', {id: post.id}) }}" class="property-btn">{% trans %}Browse{% endtrans %}</a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>

